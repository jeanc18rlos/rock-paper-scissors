{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  },
  "include": [
    "src/**/*",
    "__mocks__/**/**/*",
    "jest.config.ts",
    "craco.config.js",
    "cypress.config.ts",
    "tsconfig.paths.json"
  ],
  "resolve": {
    "extensions": [".js", ".json", ".ts", ".tsx"]
  },
  "types": ["@types/jest"],
  "exclude": ["node_modules", "build", "scripts", "craco.config.js"],
  "rootDir": ".",
  "extends": "./tsconfig.paths.json"
}
